<% include ../partials/header %>

    <div class="row mt-5">
            <div style="width:30%;margin:30px auto">
                <form action="/soulpets" method="post">
                    <h2 class="text-center display-4 text-primary">
                       <span class="text-warning">
                           <i class="fas fa-paw"></i>
                        </span>
                        New Soul<span class="text-warning">PET</span>
                    </h1>
                    <div class="form-group">
                            <label for="name">Name:</label>
                            <input class="form-control" type="text" name="name" placeholder="name">
                            
                    </div>
                    <div class="form-group">
                            <label for="url">Image:</label>
                            <input class="form-control" type="text" name="url" placeholder="Image URL">
                            
                    </div>
                    <div class="form-group">
                            <label for="age">Age:</label>
                            <input class="form-control" type="number" name="age" placeholder="Age" min="0" step="0.5">
                    </div>
                    <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea class="form-control" rows="5" name="description" placeholder="Description">
                            </textarea>
                          </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/soulpets">Go back!</a>
            </div>
            
        </div>  

<% include ../partials/footer %>